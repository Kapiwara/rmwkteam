<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_theme_background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/choose_date_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_haircut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Haircut"
                    android:textSize="20sp" />


                <CheckBox
                    android:id="@+id/checkBox_women_haircut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp"
                    tools:text="abcde" />

                <CheckBox
                    android:id="@+id/checkBox_men_haircut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_hair_coloring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hair coloring"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBox_coloring_and_haircut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/checkBox_coloring_more_than_1_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/checkBox_decolorization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_hair_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Hair care"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBox_hair_care_treatments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/checkBox_washing_and_hair_styling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Other"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/checkBox_fringe_trimming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/checkBox_beard_trimming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text=""
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_pricing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="23dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Pricing"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView_women_haircut_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="30dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_men_haircut_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="55dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_coloring_and_haircut_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="30dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_coloring_more_than_1_color_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="30dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_decolorization_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="55dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_hair_care_treatments_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="25dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_washing_and_hair_styling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="65dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_fringe_trimming_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="25dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textView_beard_trimming_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginBottom="15dp"
                    android:text="" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="@color/white"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Choose services for your new visit"
        android:textColor="@color/beige"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choose_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design_3"
        android:text="Choose date and time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>